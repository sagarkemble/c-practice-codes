void selection(){
int ud;//user entered data (ud)
scanf("%d",&ud);
if (ud==1)
{
    login();
   
}
else if(ud==2){
    create_account();
    return ;
}

else if(ud==3){
    delete_account();
}
else{
    printf("entered wrong data");
    
}
scanf("%d",&ud);

}

int main()
{
FILE *ptr;

